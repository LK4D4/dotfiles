conky.config = {
		out_to_x = false,
		out_to_console = true,
        background = false,
        cpu_avg_samples = 2,
        net_avg_samples = 2,
        no_buffers = true,
        out_to_stderr = false,
        update_interval = 1.0,
        uppercase = false,
        use_spacer = 'none',
};

conky.text =
[[RAM: $memperc% :: CPU Usage: $cpu% :: Bat: $battery :: Vol: ${exec amixer get Master -M | awk '/^  Front Left/ {print $5}'} :: ${time %D %H:%M} :: [${exec skb 1}] ]];
